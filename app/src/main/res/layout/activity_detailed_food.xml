<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedFoodActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/detailedFoodImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/carbonara" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/detailedFoodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nome del piatto"
                android:textColor="@color/brown"
                android:fontFamily="@font/din"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />


            <TextView
                android:id="@+id/ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="25"
                android:text="Ingredienti (4 Persone):"
                android:textSize="22sp"
                android:fontFamily="@font/din"
                android:textColor="@color/brown"
                app:layout_constraintTop_toBottomOf="@id/detailedFoodName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="150dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listaIngredienti"
                android:text="lista"
                android:fontFamily="@font/din"
                android:textColor="@color/brown"
                android:textSize="17sp"
                app:layout_constraintBottom_toTopOf="@id/Description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ingredients"

                android:layout_marginEnd="170dp"
                android:layout_marginStart="25dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Description"
                android:text="Descrizione"
                android:fontFamily="@font/din"
                android:textSize="22sp"
                android:textColor="@color/brown"
                app:layout_constraintTop_toBottomOf="@id/listaIngredienti"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="240dp"
                android:layout_marginStart="25dp"
                android:textAlignment="center"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailedDescription"
                android:text="Testo"
                android:fontFamily="@font/din"
                android:textSize="17sp"
                android:maxLines="25"
                android:textColor="@color/brown"
                android:justificationMode="inter_word"
                app:layout_constraintTop_toBottomOf="@id/Description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"


                android:layout_marginStart="25dp"
                android:layout_marginEnd="40dp" />


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>